'''
MODULARIZAÇÃO E PACOTES

PACOTE MOEDA DENTRO DO PACOTE UTILIDADESPY Q ESTA DENTRO DO PACOTE UTILIDADES
def aumentar(num, val=0,p=0):
    result = (num * val) / 100 + num
    if p == False:
        return result
    if p == True:
        return moedaa(result)
def diminuir(num, val=0,p=0):
    result = num - (num * val) / 100
    if p == False:
        return result
    if p == True:
        return moedaa(result)
def dobro(num,p=0):
    result=num*2
    if p == False:
        return result
    if p == True:
        return moedaa(num*2)
def metade(num,p=0):
    result= num / 2
    if p == False:
        return result
    if p == True:
        return moedaa(result)
def moedaa(num):
    return (f'R${num:>.2f}').replace('.',',')

def resumo(num,acre,dimi):
    print('RESUMO VALOR')
    print('-'* 30)
    print(f'preço analisado :{moedaa(num)}')
    print(f'resultado aumento é :{aumentar(num,acre,True)}')
    print(f'resultado diminuido é :{diminuir(num,dimi,True)}')
    print(f'resultado dobro é :{dobro(num,True)}')
    print(f'resultado metade é :{metade(num,True)}')
    

PACOTE DADO DENTRO DO PACOTE UTILIDADEPY QUE ESTA DENTRO DO PACOTE UTILIDADES    
def leiaDinheiro(num):
    valido = False
    while not valido:
        entrada = str(input(num)).replace(',','.').strip()
        if entrada.isalpha() or entrada.strip() == '':
            print('preço inválido')
        else:
            valido = True
            return float(entrada)
    
    
    
MODULO TESTE DENTRO DE UTILIDADES
from Utilidades.Utilidadespy import moeda
from Utilidades.Utilidadespy import dado

num=dado.leiaDinheiro('Digite o valor')
moeda.resumo(num, 10, 12)   
'''
#113-Reescreva a função leiaInt() que fizemos no desafio 104, incluindo agora a possibilidade da digitação de um número de tipo inválido. Aproveite e crie também uma função leiaFloat() com a mesma funcionalidade.
'''
def leiaint (msg):
   while True:
    try:
        n = int(input(msg))
        return n
    except ValueError:
        print('Erro!!! Digite um número inteiro')
    except:
        print('Tivemos um problema com os tipos de dados dos valores digitados')        

def leiareal(msg):
  while True: 
    try:
        p=float(input(msg))
        return p
    except ValueError:
        print('Erro!!! Digite um número real')
    except:
        print('Tivemos um problema com os tipos de dados dos valores digitados')
            
                

n = leiaint('Digite um número inteiro: ')
p = leiareal('Digite um valor real')
print(f'valor inteiro foi :{n} e real :{p}')
    
