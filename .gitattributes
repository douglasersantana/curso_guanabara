#115-Criando um menu
'''
sist
def interface():
    print('-' * 30)
    print('MENU PRINCIPAL')
    print('-' * 30)
    print('1-Ver pessoas cadastradas')
    print('2-Cadastrar nova pessoa')
    print('3-Sair do sistema')


    
    
from menu import sist

while True:
    try:
        sist.interface()
        op=int(input('Digite uma opção:'))
        if op == 1:
            print('Opção 1')
        elif op == 2:
            print('Opção 2')
        elif op == 3:
            print('Saindo do sistema...')
            break
        else:
            print('\033[31mERRO!Digite uma opção válida!\33[m')
    except ValueError:
        print('\033[31mErro!!! Digite um número inteiro\33[m')

